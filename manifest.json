{
  "manifest_version": 2,

  "name": "Image to Speech",
  "description": "This extension will describe images to blind people",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
    "default_title": "1000Words"
  },
  "permissions": [
    "activeTab", "<all_urls>"
  ],
  "content_scripts": [
    {
        "matches": ["<all_urls>"],
        "js": ["scripts/jquery-3.3.1.min.js", "scripts/tts.js", "scripts/myscript.js"]
    }
  ],

  "background":
  {
    "scripts": ["scripts/jquery-3.3.1.min.js"]
}
}